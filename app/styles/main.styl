$cls = 'menu_header'

.{$cls}
  position absolute
  left 0
  top 113px
  background-color rgba(119, 188, 31, 0.95)
  display inline-block
  vertical-align top
  width 100%
  font-size 0
  overflow hidden
  transition all .5s
  height calc(100vh - 113px)
  // height 100%
  // padding-right: 5%
  padding-top 40px
  padding-left 45px
  padding-right 36px
  display table
  opacity 0
  transform translateX(-100%)

  &.active
    transition transform 0.5s ease, opacity 0.5s ease
    transform translateX(0%)
    opacity 1


  .link
    font-size 20px
    font-weight: 400
    line-height: 27px
    font-family: $dinCondensed


  .menu__input
    position relative

  .menu__icon
    position absolute
    right 0
    bottom 12px
  .input_search
    background-color transparent
    height 38px
    border none
    border-bottom: 1px solid #e0e4ea
    color: white
    font-family: $openSans
    font-size: 16px
    font-weight: 400
    padding 0
    &::-webkit-input-placeholder
      /* Chrome/Opera/Safari */
      color white
    &::-moz-placeholder
      /* Firefox 19+ */
      color white
    &:-ms-input-placeholder
      /* IE 10+ */
      color white
    &:-moz-placeholder
      /* Firefox 18- */
      color white

  .menu__list
    margin-top 44px
    display flex
    flex-direction: row
    justify-content: space-between
    .menu__col
      width 50%
      &:last-child
        .menu__link
          margin-bottom 10px
          &:last-child
            margin-bottom 0
      &:nth-child(1)
        width: 167px
        .menu__link__link
          margin-bottom 20px
          &:last-child
            margin-bottom 0
