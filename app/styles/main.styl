$clss = 'menu-how-work'
  .{$clss}
    background-color: #3b424b
    width 100%
    min-height 118px
    padding-top 26px
    padding-left 42px
    padding-right 43px
    padding-bottom 32px
    height auto
    position absolute

    &__item
      display flex
      justify-content space-between
      flex-direction row


    &__link
      display inline-block
      vertical-align top
      margin-bottom 0
      &:hover
        .link_line_solid
          border-bottom-color: #72bc14

    .link
      width 117px
      font-size 14px
      font-weight: 400
      line-height: 20px
      font-family: $openSans
      border-bottom-color: #609e11




    .icon_arrow-next
      width 18px
      height 37px
      opacity .39
      align-self center

$clsss = 'content-how-work'
  .{$clsss}
    position absolute
    top 0
    left 0
    width 100%
    background-color white
    min-height 100vh

    &__title
      color: #262a30
      font-family: $dinCondensed
      font-weight: 400
      padding 45px 43px 31px 42px
    .brend_line_green
      color: white
      background-color $btn-green
      padding 11px 43px 11px 42px

  .count
    padding-top 37px
    padding-left 42px
    padding-right 43px
    &__item
      display flex
      color: $btn-green
      font-weight: 400
      font-family: $dinCondensed
      justify-content: flex-start
      align-items: center
    &__number
      font-size: 72px
      margin-right 11px
    &__text
      font-size 20px
      width 105px

    .icon_umbrella
      width 50px
      height 51px
      margin-right 11px

  .travel

    border-bottom 1px solid #e0e4ea
    padding-bottom 33px
    &__item
      padding-left 42px
      padding-right 43px
    &__title
      margin-bottom: 2.7%
    &__text
      font-family: $openSans
      font-size: 14px
      line-height: 20px
    &__map
      margin-top 13px
      margin-bottom 17px
      text-align: center
    &__number
      color: $btn-green
      font-size: 72px
      margin-right 11px
    .icon_medical-inst
      width 97px
      height 64px
      margin-right 21px

    &__sub-item
      display flex
      padding-top 36px
      .travel__number
          margin-right 36px
    .degree
      text-align center
      border-left solid 1px #e0e4ea
      height 84px
      span
        display block
        &:last-child
          font-size: 20px




@media $mDesktop
  .{$cls}
    width 49%

  .{$clss}
    padding-bottom 39px
    &__item
      flex-direction column
    &__link
      margin-bottom 27px

    .icon_arrow-next
      display none
    .link
      width 100%
      br
        display none
